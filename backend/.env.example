# ============================================
# Masal FabrikasÄ± AI - Environment Configuration
# ============================================

# --- Core Settings ---
SECRET_KEY=generate_a_secure_random_key_here
DEBUG=true
ENVIRONMENT=development
APP_VERSION=1.0.0
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:8081

# --- Database & Storage ---
# PostgreSQL Connection URL
DATABASE_URL=postgresql://masal_user:masal_pass@localhost:5432/masal_fabrikasi

# Redis Connection URL (Cache & Celery)
REDIS_URL=redis://localhost:6379/0

# Supabase (Auth & Cloud Storage)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# Local Storage Path
STORAGE_PATH=./storage
MAX_FILE_SIZE_MB=50
USE_CLOUD_STORAGE=true

# --- AI Providers ---
# Google Gemini (Primary LLM & Embeddings)
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=google/gemini-3-flash
EMBEDDING_API_KEY=your-gemini-api-key
EMBEDDING_MODEL=models/gemini-embedding-001

# OpenAI / Wiro (Alternative LLM & STT)
GPT_API_KEY=your-gpt-api-key
GPT_BASE_URL=https://api.wiro.ai/v1
GPT_MODEL=openai/gpt-oss-20b
STT_API_KEY=your-stt-api-key
STT_MODEL=openai/whisper-large-v3-turbo-turkish

# Image Generation (Google Imagen)
IMAGEN_API_KEY=your-imagen-api-key
IMAGEN_FAST_MODEL=google/imagen-v4-fast
IMAGEN_ULTRA_MODEL=google/imagen-v4-ultra

# Video Generation (Google Veo)
VIDEO_MODEL=google/veo3-fast
VIDEO_RESOLUTION=720p
VIDEO_DURATION=8

# Voice Cloning (ElevenLabs)
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Hugging Face (Optional models)
HUGGINGFACE_TOKEN=your-hf-token

# --- Payments (Stripe) ---
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID_PREMIUM_MONTHLY=price_...
STRIPE_PRICE_ID_PRO_MONTHLY=price_...

# --- Email (SMTP) ---
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# --- Monitoring & Logging ---
SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# --- Feature Flags ---
USE_ASYNC_JOBS=true

# --- Rate Limiting ---
RATE_LIMIT_FREE_TIER=5
RATE_LIMIT_PREMIUM_TIER=50
RATE_LIMIT_PRO_TIER=500
